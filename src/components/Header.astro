---
import { Image } from 'astro:assets'
import logo from '../../public/img/logo.svg'
import cartImage from '../../public/img/cart.png'

const activeStyle = (path: string) =>
  Astro.url.pathname === path ? 'active' : ''
---

<header class="header">
  <div class="container nav">
    <a href="/">
      <Image src={logo} alt="logo" />
    </a>
    <nav class="navigation">
      <a href="/" class={`nav-item ${activeStyle('/')}`}> Home</a>
      <a href="/store" class={`nav-item ${activeStyle('/store')}`}> Store</a>
      <a href="/blog" class={`nav-item ${activeStyle('/blog')}`}> Blog</a>
      <a href="/about" class={`nav-item ${activeStyle('/about')}`}> About us</a>
      <a href="/cart" class={`nav-cart ${activeStyle('/cart')}`}>
        <Image class="cart" src={cartImage} alt="shopping cart" />
      </a>
    </nav>
  </div>
</header>

<style>
  .header {
    background-image: linear-gradient(
        to right,
        rgb(0 0 0 / 0.8),
        rgb(0 0 0 / 0.7)
      ),
      url(../img/header.jpg);
    padding: 3rem 0;
    background-position: center;
    background-size: cover;
  }
  .header img {
    width: 30rem;
  }

  .nav {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  @media (min-width: 768px) {
    .nav {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  .navigation {
    margin-top: 5rem;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 2rem;
  }
  @media (min-width: 768px) {
    .navigation {
      margin: 0;
    }
  }
  .navigation .nav-item {
    position: relative;
    display: flex;
    align-items: center;
    color: var(--white);
    font-size: 1.4rem;
    font-weight: 700;
    text-decoration: none;
    text-transform: uppercase;
    transition: all 0.3s ease-in-out;
  }
  @media (min-width: 768px) {
    .header .navigation .nav-item {
      font-size: 1.6rem;
    }
  }

  @media (min-width: 1024px) {
    .header .navigation .nav-item {
      font-size: 1.8rem;
    }
    .header .navigation .cart {
      width: 3.5rem;
    }
  }

  .header .navigation .nav-item::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -0.5rem;
    width: 0;
    height: 0.5rem;
    background-color: var(--primary);
    transition: width 0.3s ease-in-out;
  }

  .header .navigation .nav-item:hover::after,
  .header .navigation .nav-item.active::after {
    width: 100%;
  }

  .header .navigation .nav-cart {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1rem;
    border-radius: 0.1rem;
  }

  .header .navigation .nav-cart:hover {
    background-color: var(--primary);
  }

  .header .navigation .cart {
    width: 3rem;
    position: relative;
    left: -0.3rem;
  }
</style>
